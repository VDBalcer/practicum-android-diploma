<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget" />

    <style name="font_medium" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="font_regular" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="font_bold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="TextAppearance.PageTitle" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/title_text_font_size</item>
    </style>

    <style name="Widget.PageTitle">
        <item name="android:paddingLeft">@dimen/title_text_padding_left</item>
        <item name="android:paddingVertical">@dimen/title_text_padding_vertical</item>
    </style>

    <style name="TextAppearance.Input" parent="font_regular">
        <item name="android:textSize">@dimen/search_input_font_size</item>
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorHint">?attr/placeholder_color</item>
    </style>

    <style name="Widget.LayoutSearchInput">
        <item name="android:layout_marginHorizontal">@dimen/search_layout_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/search_layout_margin_vertical</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="Widget.SearchInput">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/search_input_min_height</item>
        <item name="android:paddingStart">@dimen/search_input_padding_left</item>
        <item name="android:paddingEnd">@dimen/search_input_padding_right</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>

    <style name="bottom_nav_icon">
        <item name="android:width">@dimen/bottom_nav_icon_size</item>
        <item name="android:height">@dimen/bottom_nav_icon_size</item>
        <item name="android:layout_margin">@dimen/bottom_nav_icon_margin</item>
    </style>

    <style name="bottom_nav_text" parent="font_regular">
        <item name="android:textSize">@dimen/bottom_nav_text_font_size</item>
    </style>

    <style name="icon_center_vertical">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_margin">@dimen/icon_padding</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="company_icon">
        <item name="android:width">@dimen/company_logo_size</item>
        <item name="android:height">@dimen/company_logo_size</item>
    </style>

    <style name="TextAppearance.VacancyTitle" parent="font_medium">
        <item name="android:textSize">@dimen/vacancy_name_font_size</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="TextAppearance.CompanyName"  parent="font_regular">
        <item name="android:textSize">@dimen/company_name_font_size</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="TextAppearance.Wages" parent="font_regular">
        <item name="android:textSize">@dimen/company_wages_font_size</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="filter_section">
        <item name="android:paddingVertical">@dimen/filter_section_margin_vertical</item>
        <item name="android:paddingLeft">@dimen/filter_section_margin_left</item>
        <item name="android:paddingRight">@dimen/filter_section_margin_right</item>
    </style>

    <style name="filter_section_text" parent="font_regular">
        <item name="android:textSize">@dimen/filter_section_font_size</item>
        <item name="android:textColor">@color/filter_section_text_color</item>
    </style>

    <style name="filter_section_arrow">
        <item name="android:width">@dimen/filter_section_arrow_size</item>
        <item name="android:height">@dimen/filter_section_arrow_size</item>
        <item name="android:padding">@dimen/filter_section_arrow_padding</item>
    </style>

    <style name="filter_section_text_color" parent="filter_section_text">
        <item name="android:textColor">?attr/filter_text_color</item>
    </style>

    <style name="button" parent="font_medium">
        <item name="android:textSize">@dimen/button_selected_font_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="button_reset" parent="button">
        <item name="android:textColor">@color/button_reset_text_color</item>
        <item name="android:paddingVertical">@dimen/button_selected_padding_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextAppearance.ErrorText" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/error_text_font_size</item>
    </style>

    <style name="Widget.ErrorText">
        <item name="android:layout_marginHorizontal">@dimen/error_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/error_text_margin_top</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="info_title">
        <item name="android:paddingVertical">@dimen/info_padding_vertical</item>
        <item name="android:paddingHorizontal">@dimen/info_padding_horizontal</item>
    </style>

    <style name="TextAppearance.InfoTitleText" parent="font_bold">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_title_font_size</item>
    </style>

    <style name="Widget.InfoTitleText">
        <item name="android:layout_marginBottom">@dimen/info_title_text_margin_bottom</item>
    </style>

    <style name="info_title_wages" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_wages_font_size</item>
    </style>

    <style name="info_company">
        <item name="android:layout_marginTop">@dimen/info_company_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/info_company_margin_bottom</item>
        <item name="android:layout_marginHorizontal">@dimen/info_padding_horizontal</item>
        <item name="android:padding">@dimen/info_company_padding</item>
        <item name="android:background">@drawable/company_background</item>

    </style>

    <style name="info_text_layout">
        <item name="android:layout_marginHorizontal">@dimen/info_padding_horizontal</item>
    </style>

    <style name="info_text_h3" parent="font_medium">
        <item name="android:layout_marginBottom">@dimen/info_h3_margin_bottom</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_h3_font_size</item>
    </style>

    <style name="TextAppearance.InfoTextH3" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_h3_font_size</item>
    </style>

    <style name="Widget.InfoTextH3">
        <item name="android:layout_marginBottom">@dimen/info_h3_margin_bottom</item>
    </style>

    <style name="TextAppearance.InfoTextH2" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_h2_font_size</item>
    </style>

    <style name="Widget.InfoTextH2">
        <item name="android:layout_marginTop">@dimen/info_h2_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/info_h2_margin_bottom</item>
    </style>

    <style name="TextAppearance.InfoText" parent="font_medium">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

    <style name="Widget.InfoText">
        <item name="android:layout_marginBottom">@dimen/info_text_margin_bottom</item>
    </style>

</resources>
