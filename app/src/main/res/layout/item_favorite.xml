<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/company_margin_vertical"
    android:paddingHorizontal="@dimen/company_margin_horizontal">

    <ImageView
        android:id="@+id/favorites_image_logo"
        android:layout_width="@dimen/company_logo_size"
        android:layout_height="@dimen/company_logo_size"
        android:contentDescription="@string/company_logo"
        android:background="@drawable/rounded_image"
        android:foreground="@drawable/rounded_image_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/favorites_image_logo"
        android:layout_marginStart="@dimen/company_gap"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/favorites_vacancyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.VacancyTitle"/>

        <TextView
            android:id="@+id/favorites_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.CompanyName"/>

        <TextView
            android:id="@+id/favorites_wages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Wages"/>
    </LinearLayout>
</RelativeLayout>
